<div class="container text-center">
  <div class="card-challenge">
    <div class="card-c-infos">
      <div class="card-c-details text-left">
        <p>Category: <%= @race.challenge.category %></p>
        <h1>Distance: <%= @race.challenge.distance / 100 %> km</h1>
      </div>
      <div class="card-c-bet">
        <h2><%= @race.challenge.bet %> â‚¬</h2>
      </div>
    </div>
  </div>

  <div class="mt-5">
    <p>Your opponent is...</p>
    <% @runs.each do |run| %>
    <p><%= run.user.username %></p>

   <div class="avatar-opponents">
      <%= image_tag "default_avatar"%>
    </div>
    <% end %>

    <div class="my-5">

      <h2>15 seconds remaining until the start...</h2>
      <%= link_to "Launch the race (temporary)", race_path(@race), method: :patch, class: "btn-flat", "data-toggle" => "modal", "data-target" => "#launched"  %>
      <%= link_to "Race finished! (temporary)", race_path(@race), method: :patch, class: "btn-flat", "data-toggle" => "modal", "data-target" => "#YouWin" %>
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#launched">
      Launch demo modal
      </button>
    </div>
    <div
      id="map"
      style="width: 100%;
      height: 600px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    >
   </div>

   <!-- Modal -->
  <div class="modal fade" id="launched" tabindex="-1" role="dialog" aria-labelledby="launched" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="launched">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
 </div>
   <!-- Modal -->
  <div class="modal fade" id="YouWin" tabindex="-1" role="dialog" aria-labelledby="YouWin" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="YouWin">Modal title</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          ...
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-primary">Save changes</button>
        </div>
      </div>
    </div>
  </div>
 </div>



