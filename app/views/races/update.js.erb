function launchRace(raceHTML) {
  const race = document.getElementById('race');
  race.innerHTML = raceHTML;
};


<% if @race.in_progress? %>
  launchRace('<%= j render "races/started", race: @race %>');
<% elsif @race.finished? %>
  launchRace('<%= j render "races/finished", race: @race %>');
<% end %>

